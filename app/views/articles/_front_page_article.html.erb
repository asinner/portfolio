<div class='article' id='<%= article.id %>'>
	<h1 class='title'>
		<%= link_to article.title, article_path(article, class: 'link') %>
	</h1>
	
	<p class='author'>
		<em>
			Published by <%= article.author.email %> on <%= article.created_at.strftime("%B %d, %Y") %>
		</em>
	</p>
	
	<p class='body'>
		<%= truncate(article.body, length: 140) %>
	</p>
	
	<%= link_to 'Read more Â»', article_path(article) %>
	
</div>