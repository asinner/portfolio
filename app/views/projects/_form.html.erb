<div class='row'>
	<div class='column large-6 small-12 large-centered'>
		<%= form_for @project do |f| %>

			<div>
				<% @project.errors.full_messages.each do |msg| %>
					<%= msg %>
				<% end %>		
			</div>

			<%= f.label :title %>
			<%= f.text_field :title %>

			<%= f.label :category %>
			<%= f.text_field :category %>

			<%= f.label :description %>
			<%= f.text_area :description %>

			<%= f.label :url %>
			<%= f.text_field :url %>

			<%= f.label :image_url %>
			<%= f.text_field :image_url %>

			<%= f.submit class: 'button round small expand' %>

		<% end %>		
	</div>
</div>