<div class='project'>
	<div class='row'>
		<div class='column large-centered large-8'>
			<div class='column small-3'>
				<%= image_tag(project.image_url) %>
			</div>
			<div class='column small-9'>
				<p class='title'>
					<%= link_to project.title, project_path(project) %>
				</p>
				
				<p class='url'>
					<%= link_to project.url, project.url %>
				</p>
				
				<p class='description'>
					<%= project.description %>
				</p>
			</div>
		</div>
	</div>		
</div>
