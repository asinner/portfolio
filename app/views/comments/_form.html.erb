<%= form_for([@article, @comment]) do |f| %>

	<% if @comment.errors.any? %>
		<div>
			<% @comment.errors.full_messages.each do |msg| %>
				<%= msg %>
			<% end %>
		</div>
	<% end %>

	<%= f.label :author %>
	<%= f.text_field :author %>

	<%= f.label :author_email, 'Email' %>
	<%= f.text_field :author_email %>

	<%= f.label :author_url, 'Url' %>
	<%= f.text_field :author_url %>

	<%= f.label :content %>
	<%= f.text_area :content %>

	<%= f.submit 'Leave comment', class: 'button small round expand'%>

<% end %>		
