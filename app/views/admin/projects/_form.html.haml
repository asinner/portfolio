= form_for @project, url: @url, remote: true do |f|
	%div.errors
		- @project.errors.full_messages.each do |msg|
			= msg
			
	= f.label :title
	= f.text_field :title

	= f.label :category
	= f.text_field :category

	= f.label :description
	= f.text_field :description
	
	= f.label :url
	= f.text_field :url

	= f.label :image_url
	= f.text_field :image_url
	
	= f.submit
