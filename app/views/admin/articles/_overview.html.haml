= render 'admin/articles/status', article: article
%span.title= article.title
.actions
	= link_to 'Edit', edit_admin_article_path(article), class: 'action'
	= link_to 'Show', article_path(article), class: 'action'
	= link_to 'Remove', admin_article_path(article), method: :delete, data: { confirm: 'Are you sure you want to delete this?' }, class: 'action'